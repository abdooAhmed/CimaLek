@model IEnumerable<Entertment.Models.filmWatch>

@{
    ViewData["Title"] = "ServerIndex";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>ServerIndex</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServerName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.film)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td style="text-align:center;">
                @Html.DisplayFor(modelItem => item.ServerName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.film.filmId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LinkId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LinkId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LinkId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
