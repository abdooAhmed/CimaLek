@model IEnumerable<CimaLek.Models.SeriesData>

@{
    ViewData["Title"] = "FilmsHome";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-xl-3 col-sm-12 col-md-6 col-lg-4 margin-top" style="border-radius:15px">
                <div class="card h-100">
                    <div style="text-align: center;background :rgba(255, 255, 255, 0.5);" class="card-header p-3">
                        <h6 class="mb-0">@item.name</h6>
                    </div>
                    <div class="card-body  " style="padding:  0;">
                        <a asp-action="Watch" style="background-image:url(@Url);">
                            <img class="img-fluid" style="height: 100%;width: 100%;margin: 0;border-radius:10px"
                                 src="@Url.Content(item.imageUrl)">
                        </a>
                        <div class="border-radius-lg change-photo"style="display:flex;">
                            
                                <a asp-action="film" asp-route-id="@item.seriesId" class="label-photo link">Watch</a>
                                
                            
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
