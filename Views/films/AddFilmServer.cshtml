@model Entertment.Models.filmWatch

@{
    ViewData["Title"] = "AddFilmServer";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}




<div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
    <div class="card z-index-0">
        <div class="card-header text-center pt-4">
            <h5>Add Server for film</h5>
        </div>
        <div class="card-body">
            <form asp-action="AddFilmServer" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Link" class="control-label"></label>
                    <input asp-for="Link" class="form-control" />
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ServerName" class="control-label"></label>
                    <input asp-for="ServerName" class="form-control" />
                    <span asp-validation-for="ServerName" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="Again" class="control-label"></label>
                    <input asp-for="Again"  />
                    <span asp-validation-for="Again" class="text-danger"></span>
                </div>

                

                <div class="mb-3">
                    <label asp-for="filmId" class="control-label"></label>
                    <select asp-for="filmId" class="form-control" asp-items="ViewBag.filmId"></select>
                </div>


                <div class="text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>


            </form>
        </div>
        <div class="card-footer text-center pt-4">
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>





